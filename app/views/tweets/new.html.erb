<% if @tweet.errors.present? %>
    <h3>エラーがあります。</h3>
    <ul>
        <% @tweet.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>

<%= form_tag ({action: :create}) do %>
    <%= label_tag :message, 'メッセージ' %>
    <%= text_field_tag :message %>
    <%= submit_tag '投稿' %>
<% end %>